{% macro products(name, classes, products) %}
  <section class="shop {{classes}}">
    {%if name%}
      <h2>{{name}}</h2>
      {%endif%}
      <div class="items">
        {% for product in products %}
          <div class="product">
            {% if product.img %}
              <div class="image" style="background-image: url('{{product.img}}')"></div>
              {%else%}
              <div class="image" style="background-image: url('//placehold.it/800x800?text=PRODUTO SEM FOTO')"></div>
            {% endif %}

            {% if product.formattedOldPrice != product.formattedPrice %}
              <div class="old_price">
                {{product.formattedOldPrice}}
              </div>
            {% endif %}
            <p>{{product.formattedPrice}}</p>
            <h4>{{product.name}}</h4>

            <a href="/products/{{product.id}}" class="button">Ver produto</a>
          </div>
        {% endfor %}
      </div> 
    </section>
  {% endmacro %}