{% extends "layout.njk"%}

{% block content %}

  <section class="password container form">
    <form action="/users/forgot-password" method="POST">

      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div>Email</div>
        <div class="input">
          <input 
            type="email" 
            name="email" 
            placeholder="Digite o email cadastrado" 
            value="{{user.email}}" 
            onblur="Validate.apply(this, 'isEmail')" {# o blur é usado quando o usuário sai do campo. ex: clica em outro input ou na tela #} required="required">
        </div>
      </div>
    </div>

    <button class="button" type="submit">Recuperar senha</button>
  </form>

</section>

{%endblock content %}